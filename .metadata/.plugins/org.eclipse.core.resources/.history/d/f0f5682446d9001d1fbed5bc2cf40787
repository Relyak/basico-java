package ejemploAnonimo;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Mayor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		List<Integer> lis = new ArrayList<Integer>();

		lis.add(322);
		lis.add(45);
		lis.add(5);

		// Collections.sort(lis, (o1, o2) -> o1.compareTo(o2));
		Integer max;
		max = Collections.max(lis);
		// max=lis.get(lis.size()-1);

		System.out.printf("El mayor es: %d", max);
		System.out.println();
		funMax(1,2,3,4,111,2);

	}

	static void funMax(int... a) {
		List<Integer> lista = new ArrayList<Integer>();
		lista.forEach(add(i));
		for (int i : a) {
			lista.add(i);
		}
		Integer max=Collections.max(lista);
		System.out.println("El maximo de la otra es: "+max);

	}

}
