package ejercicioArrayNumeros;

import java.util.function.Function;

public class App {
	//VARIABLES
	
	int[]num= {1,2,32};
	Integer resultadoSum;
	Function<int[],Integer> sumaFunction;
	Media mediaInterfaz;
	double resultadoMed;
	
	
	public static void main(String[] args) {
		App app=new App();
		app.mostrar();
	}
	
	public void mostrar() {
		//con FUNCTION
		sumaFunction = suma();
		resultadoSum= sumaFunction.apply(num);
		//con INTERFAZ
		mediaInterfaz= media();
		resultadoMed=mediaInterfaz.media(num);
		System.out.printf("La suma es: %d \nLa media es:%.2f",resultadoSum,resultadoMed);
	}
	//con la clase Function
	public Function<int[], Integer> suma() {
		return (array) -> {
			int suma = 0;
			for (int b : array) {
				num += b;
			}
			return num;
		};
	}
	//con una interfaz
	public Media media() {
		Media media = (a) -> {
			double result = 0;
			for (int b : a) {
				result += b;
			}
			return result / a.length;
		};
		return media;
	}

	interface Media {
		double media(int[] a);
	}

}