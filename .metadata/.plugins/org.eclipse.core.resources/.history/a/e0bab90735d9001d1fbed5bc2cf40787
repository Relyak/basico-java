package ejercicioArrayNumeros;

import java.util.function.Function;

public class App {
	public static void main(String[] args) {
		App app=new App();
		app.mostrar();
	}
	public void mostrar() {
		int[]num= {5,10,15};
		Function<int[],Integer> suma = suma();
		Integer resultadoSum= suma.apply(num);
		System.out.printf("La suma es: %d",resultadoSum);
		Media media= media();
		double resultado;
		
	}
	public Function<int[], Integer> suma() {
		return (a) -> {
			int num = 0;
			for (int b : a) {
				num += b;
			}
			return num;
		};
	}

	public Media media() {
		Media media = (a) -> {
			double result = 0;
			for (int b : a) {
				result += b;
			}
			return result / a.length;
		};
		return media;
	}

	interface Media {
		double media(int[] a);
	}

}