package ejercicioLambda;

import static org.junit.jupiter.api.Assertions.*;

import java.util.Arrays;

import org.junit.jupiter.api.Test;

class LambdaTest {
	private Lambda lamb= new Lambda();

	@Test
	void testDev() {
		int numEsperado = 5;
		Constante con = lamb.dev();
		int numCons = con.valor();
		assertEquals(numEsperado, lamb.dev().valor());
	}

	@Test
	void testOb() {
		int numEsperado = 10;
		Operador op = lamb.ob();
		int numOp = op.ope(10, 0);
		assertEquals(numEsperado, numOp);
	}

	@Test
	void testObIni() {
		IniArr a = lamb.obIni();
		String valor="*";
		String array[] = new String[1];
		a.ini(array, valor);
		for (int i = 0; i < array.length; i++) {
			assertEquals(array[i],valor);
		}
		
		

	}
}
